{
    "name": "tank_game_ui_backend",
    "version": "0.0.0",
    "description": "A basic web UI for playing tank game",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "coverage": "npm test -- --coverage --collectCoverageFrom=src/**/*.js",
        "coverage-full": "NODE_NO_WARNINGS=1 TANK_GAME_ENGINE_SEARCH_DIR=engine/target  NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --testPathPattern=test/ --testTimeout=25000 --coverage --collectCoverageFrom=src/**/*.js",
        "test": "NODE_NO_WARNINGS=1 LOG_LEVEL=error NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --testPathPattern=test/unit --verbose=true",
        "integration-test": "NODE_NO_WARNINGS=1 TANK_GAME_ENGINE_SEARCH_DIR=engine/target  NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --testPathPattern=test/integration-test/ --testTimeout=25000",
        "develop-backend": "TANK_GAME_ENGINE_SEARCH_DIR=engine/target BUILD_INFO=$(./scripts/get-version webpack) LOG_LEVEL=debug TANK_GAMES_FOLDER=example/ npm start",
        "start": "node src/drivers/rest/index.js",
        "develop-frontend": "webpack serve",
        "build": "NODE_ENV=production webpack",
        "eslint": "eslint src/ test/"
    },
    "author": "Ryan Ray <ryan314r@gmail.com>",
    "license": "ISC",
    "dependencies": {
        "express": "^4.19.1",
        "pino": "^9.2.0",
        "pino-http": "^10.1.0",
        "pino-pretty": "^11.2.1"
    },
    "devDependencies": {
        "@babel/eslint-parser": "^7.24.7",
        "@babel/plugin-transform-react-jsx": "^7.24.7",
        "@babel/preset-env": "^7.24.7",
        "@eslint/js": "^8.57.0",
        "babel-loader": "^9.1.3",
        "css-loader": "^7.1.2",
        "eslint": "^8.57.0",
        "eslint-plugin-react": "^7.34.3",
        "eslint-plugin-react-hooks": "^4.6.2",
        "html-webpack-plugin": "^5.6.0",
        "jest": "^29.7.0",
        "preact": "^10.22.0",
        "style-loader": "^4.0.0",
        "webpack": "^5.92.1",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.0.4"
    },
    "imports": {
        "#platform/*": "./src/drivers/platforms/node/*"
    }
}
